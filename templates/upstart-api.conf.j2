description "Graphite-API server"
start on runlevel [2345]
stop on runlevel [!2345]

console log
kill timeout 20
limit nofile 65536 65536
respawn
setuid {{graphite_api_user}}
setgid {{graphite_api_group}}

env GRAPHITE_API_CONFIG={{ graphite_api_home }}/config.yml
exec {{graphite_api_home}}/env/bin/gunicorn -w2 graphite_api.app:app -b {{graphite_api_gunicorn_host}}:{{graphite_api_gunicorn_port}}
